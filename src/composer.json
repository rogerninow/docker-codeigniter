{
	"name": "rogerninow/docker-codeigniter",
	"type": "project",
	"description": "Base Codeigniter structure with Docker.",
	"homepage": "https://github.com/rogerninow/docker-codeigniter",
	"license": "MIT",
	"require": {
		"php": "^7.3||^8.0",
		"codeigniter4/framework": "^4"
	},
	"require-dev": {
		"roave/security-advisories": "dev-latest",
		"fakerphp/faker": "^1.9",
		"mikey179/vfsstream": "^1.6",
		"phpunit/phpunit": "^9.1"
	},
	"autoload": {
		"psr-4": {
			"App\\": "app",
			"Config\\": "app/Config"
		},
		"exclude-from-classmap": [
			"**/Database/Migrations/**"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Support\\": "tests/_support"
		}
	},
	"scripts": {
		"test": "phpunit"
	},
	"support": {
		"codeigniter": "https://codeigniter.com/docs",
		"docker": "https://docs.docker.com/"
	}
}
